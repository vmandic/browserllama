{
    "manifest_version": 3,
    "name": "Browserllama",
    "version": "1.0",
    "description": "Chat with your local Ollama instance and LLM models from Chrome!",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "host_permissions": [
        "http://localhost:11434/api/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/favicon-16x16.png",
        "32": "icons/favicon-32x32.png",
        "192": "icons/android-chrome-192x192.png",
        "512": "icons/android-chrome-512x512.png"
      }
    },
    "icons": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png",
      "192": "icons/android-chrome-192x192.png",
      "512": "icons/android-chrome-512x512.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  